# ==============================================
# MCL Site - Environment Variables Template
# ==============================================
# Copy this file to .env for local development
# Configure these as Application Settings in Azure App Service
# ==============================================

# Django Settings Module
# Local: mcl_site.settings.dev
# Production: mcl_site.settings.production
DJANGO_SETTINGS_MODULE=mcl_site.settings.dev

# ==============================================
# REQUIRED FOR PRODUCTION
# ==============================================

# Security
# Generate with: python -c "from django.core.management.utils import get_random_secret_key; print(get_random_secret_key())"
SECRET_KEY=your-super-secret-key-here-change-in-production

# Database
# Format: postgres://USER:PASSWORD@HOST:PORT/DBNAME
# Azure PostgreSQL: postgres://user@servername:password@servername.postgres.database.azure.com:5432/dbname?sslmode=require
DATABASE_URL=postgres://user:password@localhost:5432/mcl_db

# Azure Blob Storage for Media Files
AZURE_ACCOUNT_NAME=your-storage-account-name
AZURE_ACCOUNT_KEY=your-storage-account-key
AZURE_CONTAINER=media

# ==============================================
# OPTIONAL SETTINGS
# ==============================================

# Custom Domain (if configured)
# CUSTOM_DOMAIN=www.yourdomain.com

# Wagtail Admin Base URL
WAGTAILADMIN_BASE_URL=http://localhost:8000

# Gunicorn Configuration
# GUNICORN_WORKERS=2
# GUNICORN_THREADS=4

# Azure Application Insights
# APPLICATIONINSIGHTS_CONNECTION_STRING=InstrumentationKey=xxx;IngestionEndpoint=https://xxx.in.applicationinsights.azure.com/

# Azure Redis Cache
# REDIS_URL=rediss://:password@hostname:6380/0

# Logging Level
# DJANGO_LOG_LEVEL=INFO
